


<div class="container">

    
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">The teams you belong to
                        <br><small class="text-info"> <%= fa_icon "plus" %> <%= link_to "Create new team",new_team_url, remote: true %>  </small>
          </h1>
            </div>
        </div>
        <!-- /.row -->
    </div>

    <div class="container">
            <div class="flex-row row"  id="teams">
    
                    <% @teams.each do |team| %>
                    <div class="col-xs-6 col-sm-4 col-lg-3" id="team_<%= team.id %>" >
                            <div class="thumbnail" >
                                <div class="caption">
                                    <h3><%= team.name %></h2>
                                    <p class="flex-text text-muted"> <%= team.description %>  </p>
                                    <a class="btn btn-primary" href="#">Open</a>
                                    <%= link_to  "Remove", team_url(team),method: :delete,:class=>"btn btn-danger",:style=>"margin-top:10px;",:remote=>true %>
                                </div>
                            </div>
                        </div>
                     <% end %>
             
            </div>
        </div>        


