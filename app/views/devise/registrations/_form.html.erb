<div class="container">    
        <div id="registerBox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title">Register</div>
                    </div>     
    
                    <div style="padding-top:30px" class="panel-body" >
    
                        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                            
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:class=>"form-horizontal") do |f| %>
                                   
                        
                        <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><%= fa_icon "user" %> </span>
                                <%= f.text_field :username, placeholder: "Username" , autocomplete: "off" , :class=>"form-control" %>
                        </div>

                        <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><%= fa_icon "envelope" %> </span>
                                        <%= f.email_field :email, placeholder: "Email", autofocus: true,autocomplete: "email" ,  :class=>"form-control" %>
                        </div>
                                
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><%= fa_icon "key" %> </span>
                                        <%= f.password_field :password, placeholder: "Password" , autocomplete: "off" , :class=>"form-control" %>
                             </div>
                                    
                             <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon"><%= fa_icon "key" %> </span>
                                    <%= f.password_field :password_confirmation, placeholder: "Password confirmation" , autocomplete: "off" , :class=>"form-control" %>
                             </div>
                                   

                             
                                <div style="margin-top:10px" class="form-group">
                                    <!-- Button -->
                                    <div class="col-sm-12 controls">
                                        <%= f.submit "Register",:class=>"btn btn-success login-button" %>
                                    </div>
                                </div>
    
    
                                <div class="form-group">
                                    <div class="col-md-12 control">
                                        <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                                <%= fa_icon "arrow-left" %>
                                            <%= link_to  "Back to previous page", url_for(:back) %>
                                        </a>
                                        </div>
                                    </div>
                                </div>    
                             <% end %> 
                        </div>                     
                    </div>  
        </div>
    </div>
    